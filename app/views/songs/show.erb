<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h3> <%= @song.name %> </h3>
<h4><a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></h4>
<br>
<% @song.genres.each do |genre| %>
    <ul>
      <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
    </ul>
    <%end%>